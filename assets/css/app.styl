
@import 'lib/bootstrap/bootstrap.styl' // bootstrap-stylus
@import 'nib'

//------------------------------------------------
// General rules

.container
  margin-top: 20px
  width: 700px
  position: relative
  
.row
  margin-top: 10px
  margin-right: -20px
  
.left
  float: left

a
  color: #6F8B8B
  cursor: pointer

a:hover
  color: #9DC0AE
  
.center-block
  margin-left: auto
 	margin-right: auto
 	display: table

.full-width
  width: 100%


//------------------------------------------------
// Top elements

#timebar
  position: absolute
  height: 10px
  width: 100%
  background-color: #99C5D6

#splash_screen
  position: absolute
  width: 100%
  height: 100%
  background-color: rgba(130, 148, 153, 0.5)
  z-index: 100
  visibility: hidden

//------------------------------------------------
// Photo

.photo-container
  width: 640px
  height: 400px
  position: relative
  text-align: center

#photo
  max-height: 400px
  display: inline-block
  position: relative

//------------------------------------------------
// Buttons

.skip-container
  float: left
  width: 100px  
  

.btn-choose
  width: 250px

button.pure-button.btn-fixwidth
  margin-left: -45px


//------------------------------------------------
// Thumbs

#thumbs_down ,#thumbs_up
  float: right
  position: relative
  cursor: pointer
  border: none
  width: 20px
  height: 20px

#thumbs_down
  right: 20px
  top: 7px
  background:url(/img/thumbs_down20.png) no-repeat
  
#thumbs_up
  right: -30px
  top: 2px
  background:url(/img/thumbs_up20.png) no-repeat

#eval_photo
  width: 180px
  margin-top: 6px
  float: left
  text-align: right
  
//------------------------------------------------
// Share links

.share-container, .thumbs-container
  width: 246px
  height: 25px
  
.share-subcontainer
  float: left
  width: 100px
  height: 35px
  text-align: center
  
#album_save_img
  margin-top: 2px
  
#vk_share
  margin-top: 8px
  margin-left: 6px

#vk_save_photo
  margin-top: 8px
  margin-left: 6px


//------------------------------------------------
// Score field

#score
  absolute: top 468px left 278px
  width: 120px
  height: 30px
  border: 1px solid #C8D5DE
  font-size: 26px
  text-align: center
  padding-top: 8px

//------------------------------------------------
// Score changing information

#up_score, #down_score
  absolute: top 474px left 400px
  width: 20px
  height: 20px
  font-size: 22px
  text-align: center
  display: none

#up_score
  color: #639c79

#down_score
  color: #B32735

//------------------------------------------------
// Url to the original photo on flickr.com

#photo_url
  text-align: center

#photo_url_container
  padding-right: 20px
  
  
#nback_link
  width: 100%
  height: 20px
  margin-top: 80px
  text-align: center