extends layout
block content
  #timebar
  #splash_screen
  .container
    #score
    .container-fluid
      .row.full-width
        .span12.full-width
          .photo-container
            #circular.marginLeft
              #circular_1.circular
              #circular_2.circular
              #circular_3.circular
              #circular_4.circular
              #circular_5.circular
              #circular_6.circular
              #circular_7.circular
              #circular_8.circular 
              .clearfix
            img#photo.img-polaroid.center-block(src="", alt="Guess the country...")
      .row.full-width
        .span12.full-width
          #photo_url_container
            a#photo_url.center-block Оригинал на flickr
      .row
        .span12
          .row
            .span6
              button#btn1.pure-button.btn-fixwidth.btn-choose.center-block(href="") *
            .span6
              button#btn2.pure-button.btn-fixwidth.btn-choose.center-block(href="") *
          .row
            .span6
              button#btn3.pure-button.btn-fixwidth.btn-choose.center-block(href="") *
            .span6
              button#btn4.pure-button.btn-fixwidth.btn-choose.center-block(href="") *
      .row
        .span3.share-container
          a#vk_share на стену
          a#vk_save_photo в альбом
        .span2.skip-container
          button#skip.pure-button.btn-default.center-block(href="") Пропустить
        .span3.thumbs-container
          a#thumbs_down
          a#thumbs_up
 
 
 
